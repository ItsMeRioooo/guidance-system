<div class="upload">
        <h3>Upload .xlsx file and convert it into JSON</h3>
        <form action="/upload" method="post" enctype="multipart/form-data">
            <input type="file" name="file" accept=".xls, .xlsx">
            <button type="submit">Upload</button>
        </form>
    </div>
    <div class="convert">
        <h3>Convert JSON text to .xlsx file</h3>
        <form id="jsonForm">
            <textarea name="json" id="jsonInput" cols="30" rows="10"></textarea>
            <button type="submit">Convert</button>
        </form>
    </div>